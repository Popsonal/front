<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="어떤 팝업스토어를 선호하나요?"
        android:textSize="20sp"
        android:layout_marginTop="24dp" />

    <RadioGroup
        android:id="@+id/radioGroupPreference"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioFashion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="패션" />

        <RadioButton
            android:id="@+id/radioFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="푸드" />

        <RadioButton
            android:id="@+id/radioCharacter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="캐릭터" />

        <RadioButton
            android:id="@+id/radioKids"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="키즈" />

        <RadioButton
            android:id="@+id/radioElectronics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전자기기" />

        <RadioButton
            android:id="@+id/radioLimitedEdition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="한정판" />
    </RadioGroup>

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="제출"
        android:layout_marginTop="16dp"/>
</LinearLayout>
